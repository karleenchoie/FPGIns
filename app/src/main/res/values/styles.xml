<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/fpg_orange</item>
        <item name="colorAccent">@color/fpg_orange</item>
        <item name="android:textColor">@color/fpg_orange</item>
        <item name="android:statusBarColor">@color/fpg_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/design_bottom_navigation_text_size</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">

        <item name="android:textSize">@dimen/design_bottom_navigation_active_text_size</item>
    </style>

    <style name="FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/setting_title</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/fpg_orange</item>
    </style>

    <!-- Material Design theme. -->
    <style name="Theme.MaterialDialog" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/exo_demibold</item>
    </style>

    <!-- Theme for BottomSheetDialog -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_back</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"></style>

    <style name="MaterialDialog">

    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/button_rectangle</item>
    </style>

    <!-- Theme for Dialog Title -->
    <style name="MaterialDialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/fpg_gray</item>
        <item name="android:layout_marginTop">@dimen/vertical_default_padding</item>
        <item name="android:textSize">@dimen/head_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/horizontal_default_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_default_padding</item>
    </style>

    <!-- Theme for Dialog Message -->
    <style name="MaterialDialog.Message">
        <item name="android:textSize">@dimen/setting_title</item>
        <item name="android:layout_marginTop">@dimen/vertical_default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/horizontal_default_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_default_padding</item>
        <item name="android:textColor">@color/fpg_gray</item>
    </style>

    <!-- Theme for Dialog Positive Button -->
    <style name="MaterialDialog.PositiveButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">@dimen/setting_title</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Theme for Dialog Negative Button -->
    <style name="MaterialDialog.NegativeButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">@dimen/setting_title</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="My_Widget.MaterialComponents.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <!-- Chip text color selector -->
        <item name="android:textColor">@color/chip_color_effect</item>
        <!-- Chip close icon color selector -->
        <!--        <item name="closeIconTint">@color/mtrl_chip_close_icon_tint</item>-->
    </style>

</resources>
