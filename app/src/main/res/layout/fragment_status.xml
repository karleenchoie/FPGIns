<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/page_default_margin_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/page_default_margin_horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linear_step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/rounded_textview"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/txt_step1" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/fpg_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" STEP 1:"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/setting_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" step 1 description here"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/edittext_textsize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_step2"
                android:layout_below="@id/linear_step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/circle_active"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/txt_step2" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/fpg_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" STEP 2:"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/setting_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" step 2 description here"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/edittext_textsize" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_step2"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/txt_step3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/rounded_textview"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/fpg_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" STEP 3:"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/setting_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" step 3 description here"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/edittext_textsize" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_step4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_step3"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/txt_step4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/rounded_textview"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/fpg_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" STEP 4:"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/setting_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" step 3 description here"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/edittext_textsize" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_step5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_step4"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/txt_step5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/rounded_textview"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/fpg_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" STEP 5:"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/setting_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" step 5 description here"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/edittext_textsize" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_step6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_step5"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/txt_step6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/rounded_textview"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" STEP 6:"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/setting_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" step 6 description here"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/edittext_textsize" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>