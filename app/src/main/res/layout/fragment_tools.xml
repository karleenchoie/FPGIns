<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">


    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:id="@+id/createPasswordScrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCreatePw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:text="@string/title_contact_us"
                android:fontFamily="@font/exo_demibold"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/top_title_text_size"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textViewCreatePw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/exo_demibold"
                android:text="@string/cc_definition"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sub_title_text_size"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FF5000"/>

<!--            <EditText-->
<!--                android:id="@+id/editTextDept"-->
<!--                android:layout_width="match_parent"-->
<!--                android:padding="15dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Department"-->
<!--                android:fontFamily="@font/flexo_demi"-->
<!--                android:focusableInTouchMode="true"-->
<!--                android:background="@drawable/button_rectangle"-->
<!--                android:layout_marginBottom="@dimen/spacing_of_editext"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:imeOptions="actionNext"-->
<!--                android:inputType="text"-->
<!--                android:scrollHorizontally="true"-->
<!--                android:textSize="@dimen/sub_list_text_size" />-->

            <EditText
                android:id="@+id/editTextNewName"
                android:layout_width="match_parent"
                android:fontFamily="@font/flexo_demi"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginBottom="@dimen/spacing_of_editext"
                android:layout_marginTop="15dp"
                android:focusableInTouchMode="true"
                android:background="@drawable/button_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:textSize="@dimen/sub_list_text_size" />


            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:fontFamily="@font/flexo_demi"
                android:layout_marginBottom="@dimen/spacing_of_editext"
                android:focusableInTouchMode="true"
                android:background="@drawable/button_rectangle"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:textSize="@dimen/sub_list_text_size" />

            <EditText
            android:id="@+id/editTextMobileNum"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_of_editext"
            android:hint="Mobile Number"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/flexo_demi"
            android:background="@drawable/button_rectangle"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:textSize="@dimen/sub_list_text_size" />

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_marginBottom="5dp"
                android:layout_height="100dp"
                android:hint="Message"
                android:gravity="top|left"
                android:maxLines="4"
                android:lines="4"
                android:fontFamily="@font/flexo_demi"
                android:focusableInTouchMode="true"
                android:background="@drawable/button_rectangle"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:textSize="@dimen/sub_list_text_size" />


                <Button
                    android:id="@+id/btn_sumbit"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/flexo_demi"
                    android:layout_marginTop="5dp"
                    android:background="#ff4d00"
                    android:textSize="20sp"
                    android:contentDescription="@string/app_name"
                    android:text="SUBMIT"
                    android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textViewHeadOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/exo_demibold"
                android:text="@string/cc_headoffice"
                android:textColor="@color/text_color"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textViewContactInfo"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/flexo_demi"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/cc_contact_info"
                android:textColor="@color/text_color"
                android:textSize="13dp"
                android:textStyle="normal" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>