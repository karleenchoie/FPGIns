<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/linear_nav"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:textColor="@color/fpg_gray"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textSize="@dimen/head_textsize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/email"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/page_default_margin_horizontal"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/linear_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:id="@+id/createPasswordScrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/page_default_margin_horizontal"
                android:text="@string/title_1"
                android:textColor="@color/fpg_orange"
                android:textSize="@dimen/setting_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/report_period"
                    android:paddingHorizontal="@dimen/page_default_margin_horizontal"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/textview_error_textsize" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="As of Sep 2019"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/textview_error_textsize" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginVertical="10dp" />

            <RelativeLayout
                android:id="@+id/linear_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginTop="2dp"
                android:padding="@dimen/page_default_margin_horizontal">

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="@dimen/page_default_margin_horizontal"
                    android:gravity="right"
                    android:src="@drawable/income_icon"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                </ImageView>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginHorizontal="@dimen/page_default_margin_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fpg_orange"
                        android:textSize="@dimen/head_dashboard"
                        android:text="5.6878"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/button_textsize"
                        android:text="INCOME"/>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginTop="2dp"
                android:padding="@dimen/page_default_margin_horizontal">

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:layout_marginHorizontal="@dimen/page_default_margin_horizontal"
                    android:src="@drawable/losses_icon"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                </ImageView>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginHorizontal="@dimen/page_default_margin_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fpg_orange"
                        android:textSize="@dimen/head_dashboard"
                        android:text="4.325B"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/button_textsize"
                        android:text="LOSSES"/>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginTop="2dp"
                android:padding="@dimen/page_default_margin_horizontal">

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:layout_marginHorizontal="@dimen/page_default_margin_horizontal"
                    android:src="@drawable/production_icon"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                </ImageView>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginHorizontal="@dimen/page_default_margin_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fpg_orange"
                        android:textSize="@dimen/head_dashboard"
                        android:text="105B"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/button_textsize"
                        android:text="PRODUCTION"/>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginTop="2dp"
                android:padding="@dimen/page_default_margin_horizontal">

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:layout_marginHorizontal="@dimen/page_default_margin_horizontal"
                    android:src="@drawable/ratio_icon"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                </ImageView>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginHorizontal="@dimen/page_default_margin_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fpg_orange"
                        android:textSize="@dimen/head_dashboard"
                        android:text="43.2%"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fpg_gray"
                        android:textSize="@dimen/button_textsize"
                        android:text="PRODUCTION RATIO"/>

                </LinearLayout>


            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/page_default_margin_horizontal"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_2"
                    android:textColor="@color/fpg_orange"
                    android:textSize="@dimen/setting_title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.jjoe64.graphview.GraphView
                                android:layout_width="match_parent"
                                android:layout_height="200dip"
                                android:id="@+id/bar_graph" />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_3"
                    android:padding="@dimen/page_default_margin_horizontal"
                    android:textColor="@color/fpg_orange"
                    android:textSize="@dimen/setting_title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.jjoe64.graphview.GraphView
                                android:layout_width="match_parent"
                                android:layout_height="200dip"
                                android:id="@+id/graphLosses" />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>