<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User's first message using this app"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/head_title_textsize"
            android:background="@drawable/reply"
            android:paddingVertical="@dimen/page_default_margin_horizontal"
            android:paddingHorizontal="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="60dp"
            android:layout_gravity="right">
        </TextView>

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feb 27, 2020 | 4:00 PM"
            android:textColor="?android:textColorHint"
            android:layout_marginEnd="30dp"
            android:layout_gravity="right"
            android:paddingBottom="@dimen/page_default_margin_horizontal"
            android:textSize="11dp"/>

    </LinearLayout>

</RelativeLayout>