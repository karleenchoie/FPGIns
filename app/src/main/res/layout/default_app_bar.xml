<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/app_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:hint="Title"
            android:layout_alignParentLeft="true"
            android:paddingHorizontal="@dimen/horizontal_default_padding"
            android:layout_centerVertical="true"
            android:textSize="@dimen/head_textsize"
            android:textColor="@color/fpg_gray">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/img_branch"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/vertical_default_padding"
                android:background="@drawable/circle_border"
                android:src="@drawable/icon_branch"
                android:layout_centerVertical="true"
                android:padding="6dp"/>

            <ImageView
                android:id="@+id/img_notification"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/vertical_default_padding"
                android:background="@drawable/circle_border"
                android:src="@drawable/icon_notification"
                android:layout_centerVertical="true"
                android:padding="6dp"/>

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_border"
                android:src="@drawable/icon_share"
                android:layout_margin="@dimen/vertical_default_padding"
                android:layout_centerVertical="true"
                android:padding="6dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>