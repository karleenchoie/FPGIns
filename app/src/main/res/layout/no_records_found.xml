<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_only"
        android:layout_above="@+id/txt_noRecordsFound"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/txt_noRecordsFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_records_found"
        android:textSize="@dimen/setting_title"
        android:textColor="@color/fpg_gray"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/vertical_default_padding"
        android:layout_centerInParent="true"/>

</RelativeLayout>