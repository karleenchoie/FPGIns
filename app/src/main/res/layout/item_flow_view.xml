<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="190dp">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/pic_one"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/name"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/fpg_gray"
        android:paddingHorizontal="3dp"
        android:text="THUMBNAIL 1"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@color/white_opacity35"
        android:textAppearance="?android:attr/textAppearanceSmallInverse" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:id="@+id/edt_ThumbnailEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingVertical="1dp"
            android:background="@color/white_opacity40"
            android:src="@drawable/edit_button" />
        <ImageView
            android:id="@+id/edt_ThumbnailDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingVertical="1dp"
            android:background="@color/white_opacity40"
            android:src="@drawable/delete_button"/>
    </LinearLayout>

</FrameLayout>