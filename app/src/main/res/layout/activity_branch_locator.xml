<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomNavigation.AgentDashboard.MotorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:paddingHorizontal="@dimen/horizontal_default_padding"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/page_default_margin_horizontal"
                android:paddingVertical="@dimen/page_default_margin_horizontal"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/branch_locator"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/head_textsize"
                android:textColor="@color/fpg_gray">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:paddingVertical="@dimen/page_default_margin_horizontal"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/horizontal_default_padding"
                android:text="@string/get_in_touch"
                android:textColor="@color/fpg_gray"
                android:textSize="@dimen/setting_title" />

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingVertical="@dimen/page_default_margin_horizontal"
                android:maxLines="1"
                android:text="@string/indonesia"
                android:paddingHorizontal="@dimen/horizontal_default_padding"
                android:textColor="@color/fpg_orange"
                android:textSize="@dimen/setting_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_address"
                    android:layout_gravity="start"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="Chase Plaza Tower 4th Floor Jl. Jend. Sudirman Kav. 21 Jakarta 12920, Indonesia"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_mobile"
                    android:layout_gravity="start"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="+62 21 50821555"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_gravity="start"
                    android:src="@drawable/icon_email" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="insure@fpgins.com"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fineGray"
                android:layout_marginVertical="@dimen/page_default_margin_horizontal">
            </View>

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingVertical="@dimen/page_default_margin_horizontal"
                android:maxLines="1"
                android:text="@string/philippines"
                android:paddingHorizontal="@dimen/horizontal_default_padding"
                android:textColor="@color/fpg_orange"
                android:textSize="@dimen/setting_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_address"
                    android:layout_gravity="start"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="6/F Zuellig Buiding, Makati Avenue corner Paseo de Roxas, Makati City, 1225 Philippines"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_mobile"
                    android:layout_gravity="start"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="(+632) 8859 1200 / (+632) 7944 1300"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_email"
                    android:layout_gravity="start"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="phcustomercare@fpgins.com"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fineGray"
                android:layout_marginVertical="@dimen/page_default_margin_horizontal">
            </View>

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:paddingVertical="@dimen/page_default_margin_horizontal"
                android:paddingHorizontal="@dimen/horizontal_default_padding"
                android:text="@string/thailand"
                android:textColor="@color/fpg_orange"
                android:textSize="@dimen/setting_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_address"
                    android:layout_gravity="start"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="52 Thaniya Plaza Building, Floor 16, 24 Silom Road, Suriyawong Subdistrict, Bang Rak District, Bangkok 10500"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_mobile"
                    android:layout_gravity="start"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="+66 (0) 2231 2640"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/vertical_default_padding"
                android:layout_marginVertical="@dimen/page_default_margin_horizontal"
                android:layout_marginHorizontal="@dimen/horizontal_default_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_email"
                    android:layout_gravity="start"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/horizontal_default_padding"
                    android:text="th.customerservice@fpgins.com"
                    android:textColor="@color/fpg_gray"
                    android:textSize="@dimen/setting_title" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>